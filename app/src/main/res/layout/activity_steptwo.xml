<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="12dp"
                android:visibility="visible"
                android:focusable="true">

    <TextView
            android:id="@+id/mobile"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Enter Song Details:"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            tools:ignore="HardcodedText"/>
    <EditText android:layout_width="match_parent" android:layout_height="50dp"
              android:layout_below="@+id/mobile"
              android:id="@+id/searchquery"
              android:layout_marginTop="30dp"
              android:background="#ffffff"
              android:layout_alignParentStart="true" android:layout_marginStart="12dp"
              android:layout_alignParentEnd="true" android:layout_marginEnd="12dp" tools:ignore="LabelFor"/>
    <Button android:layout_width="106dp" android:layout_height="58dp"
            android:layout_below="@+id/searchquery"
            android:text="Search"
            android:background="@drawable/buttonstylepink"
            android:textColor="#FFFFFF"
            android:id="@+id/searchbuttonsong"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/searchbuttonsong"
              android:text="Note:"
              android:layout_marginTop="40dp"
              android:id="@+id/note"
              android:textSize="20dp"
              android:textColor="#ffffff"
              android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/note"
              android:text="You can search for the song by giving more relevant details such as artist etc to facilitate the searching of the right song."
              android:layout_marginTop="22dp"
              android:textSize="18dp"
              android:textColor="#ffffff" android:layout_alignParentStart="true" android:layout_marginStart="12dp"
              android:layout_alignParentEnd="true" android:layout_marginEnd="12dp"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">

        <ImageView
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:src="@drawable/heart"
                android:contentDescription="HEartIcon"
                tools:ignore="HardcodedText"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Echo"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:ignore="HardcodedText"/>

        <ImageView
                android:layout_width="19dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:src="@drawable/heart"
                android:contentDescription="HeartIcon"
                tools:ignore="HardcodedText"/>
    </LinearLayout>
</RelativeLayout>